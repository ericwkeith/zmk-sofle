#define ZMK_POINTING_DEFAULT_MOVE_VAL 1200  // 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 25   // 10

#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

&mmv_input_listener { input-processors = <&zip_xy_scaler 2 1>; };

&msc_input_listener { input-processors = <&zip_scroll_scaler 2 1>; };

&msc {
    acceleration-exponent = <0>;      // 0
    time-to-max-speed-ms = <1>;       // 300
    delay-ms = <0>;                   // 0
};

&mmv {
    time-to-max-speed-ms = <60>;
    acceleration-exponent = <0>;
};

&mt {
    tapping-term-ms = <260>;
    flavor = "tap-preferred";
    require-prior-idle-ms = <0>;
    quick-tap-ms = <0>;
    bindings = <&kp>, <&kp>;
};

/ {
    scroll_encoder: scroll_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;

        tap-ms = <100>;
    };

    behaviors {
    };

    combos {
        compatible = "zmk,combos";

        desktopleft {
            bindings = <&kp LC(LG(LEFT_ARROW))>;
            key-positions = <0 1>;
            layers = <0>;
        };

        copy {
            bindings = <&kp LC(C)>;
            key-positions = <28 29>;
            layers = <0 3 3>;
        };

        paste {
            bindings = <&kp LC(V)>;
            key-positions = <29 30>;
            layers = <0 3 3>;
        };

        backspace {
            bindings = <&kp BACKSPACE>;
            key-positions = <17 18>;
            layers = <0 3 3>;
        };

        minus {
            bindings = <&kp MINUS>;
            key-positions = <30 27>;
            layers = <0 3 3>;
        };

        btclr {
            bindings = <&bt BT_CLR>;
            key-positions = <52 57>;
            layers = <0>;
        };

        hatethisjob {
            bindings = <&hatethisjob>;
            key-positions = <0 39>;
            layers = <0>;
        };

        UID {
            bindings = <&UID>;
            key-positions = <13 26>;
            layers = <0>;
        };

        perworkflow {
            bindings = <&perworkflow>;
            key-positions = <0 5>;
            layers = <0>;
        };

        forrewrite {
            bindings = <&forrewrite>;
            key-positions = <39 57>;
            layers = <0>;
        };

        awaitingupdate {
            bindings = <&awaitingupdate>;
            key-positions = <31 26>;
            layers = <0>;
        };

        pend {
            bindings = <&pend>;
            key-positions = <53 54>;
            layers = <0>;
        };

        perAI {
            bindings = <&perAI>;
            key-positions = <13 14>;
            layers = <0>;
        };

        desktopright {
            bindings = <&kp RC(RG(RIGHT))>;
            key-positions = <5 4>;
            layers = <0>;
        };

        undo {
            bindings = <&kp LC(Z)>;
            key-positions = <40 39>;
            layers = <0>;
        };

        elemail {
            bindings = <&elemail>;
            key-positions = <57 56 44>;
        };

        eracmail {
            bindings = <&eracmail>;
            key-positions = <5 4 18>;
        };

        lm4info {
            bindings = <&LM4info>;
            key-positions = <59 60 46>;
        };

        rentalupdate {
            bindings = <&rentalupdate>;
            key-positions = <60 46 61>;
        };

        task {
            bindings = <&task>;
            key-positions = <25 12 11>;
        };

        rewriteemail {
            bindings = <&rewritemail>;
            key-positions = <37 38 50>;
        };

        ERAC {
            bindings = <&ERAC>;
            key-positions = <41 42>;
        };

        shopnovm {
            bindings = <&shopnovm>;
            key-positions = <54 55>;
        };

        checkback {
            bindings = <&checkback>;
            key-positions = <56 57>;
        };

        hold {
            bindings = <&hold>;
            key-positions = <56 57 55>;
        };

        drivernovm {
            bindings = <&drivernovm>;
            key-positions = <59 60 61>;
        };

        ceires {
            bindings = <&ceires>;
            key-positions = <53 54 55>;
        };

        mb4 {
            bindings = <&mkp MB4>;
            key-positions = <0 39>;
        };

        mb5 {
            bindings = <&mkp MB5>;
            key-positions = <5 44>;
        };

        selectall {
            bindings = <&kp LC(A)>;
            key-positions = <26 27>;
            layers = <0 3 3>;
        };

        plus {
            bindings = <&kp PLUS>;
            key-positions = <17 14>;
            layers = <0 3 3>;
        };

        underscore {
            bindings = <&kp UNDER>;
            key-positions = <40 43>;
            layers = <0 3 3>;
        };
    };

    macros {
        hatethisjob: hatethisjob {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(H) &kp A &kp T &kp E &kp T &kp H &kp I &kp S &kp J &kp O &kp B &kp POUND &kp N3 &kp RET>;
            label = "HATETHISJOB";
        };

        perworkflow: perworkflow {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(P) &kp E &kp R &kp SPACE &kp LS(E) &kp L &kp E &kp M &kp E &kp N &kp T &kp SPACE &kp W &kp O &kp R &kp K &kp F &kp L &kp O &kp W &kp DOT>;
            label = "PERWORKFLOW";
        };

        forrewrite: forrewrite {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp F &kp O &kp R &kp SPACE &kp R &kp E &kp W &kp R &kp I &kp T &kp E &kp SPACE &kp O &kp N &kp SPACE>;
            label = "FORREWRITE";
        };

        awaitingupdate: awaitingupdate {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp A &kp W &kp A &kp I &kp T &kp I &kp N &kp G &kp SPACE &kp LS(C) &kp LS(E) &kp LS(I) &kp SPACE &kp U &kp P &kp D &kp A &kp T &kp E &kp DOT>;
            label = "AWAITINGUPDATE";
        };

        pend: pend {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp E &kp X &kp T &kp E &kp N &kp D &kp E &kp D &kp SPACE &kp T &kp O &kp SPACE &kp P &kp E &kp N &kp D &kp E &kp D &kp SPACE &kp D &kp A &kp T &kp E &kp DOT>;
            label = "PEND";
        };

        perAI: perAI {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(P) &kp E &kp R &kp SPACE &kp LS(A) &kp LS(I) &kp SPACE &kp N &kp O &kp T &kp E &kp S &kp COLON &kp SPACE &kp RET &kp RET &kp LS(C) &kp H &kp E &kp C &kp K &kp SPACE &kp B &kp A &kp C &kp K &kp SPACE>;
            label = "PERAI";
        };

        UID: UID {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp E &kp N4 &kp N8 &kp N9 &kp P &kp T &kp TAB>;
            label = "UID";
        };

        elemail: elemail {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp E &kp K &kp E &kp I &kp T &kp H &kp AT &kp E &kp L &kp E &kp M &kp E &kp N &kp T &kp C &kp O &kp R &kp P &kp DOT &kp C &kp O &kp M>;
            label = "ELEMAIL";
        };

        eracmail: eracmail {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp E &kp R &kp I &kp C &kp DOT &kp K &kp E &kp I &kp T &kp H &kp AT &kp E &kp H &kp I &kp DOT &kp C &kp O &kp M>;
