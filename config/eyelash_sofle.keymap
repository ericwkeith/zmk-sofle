        andarea: andarea {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp A &kp N &kp D &kp SPACE &kp LS(A) &kp R &kp E &kp A &kp SPACE &kp LS(M) &kp A &kp N &kp A &kp G &kp E &kp R &kp SPACE>;
            label = "ANDAREA";
        };

        calledbranch4: calledbranch4 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(C) &kp A &kp L &kp L &kp E &kp D &kp SPACE &kp B &kp R &kp A &kp N &kp C &kp H &kp SPACE &kp T &kp O &kp SPACE &kp R &kp E &kp W &kp R &kp I &kp T &kp E &kp SPACE>;
            label = "CALLEDBRANCH4";
        };

        andspoke: andspoke {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp A &kp N &kp D &kp SPACE &kp S &kp P &kp O &kp K &kp E &kp SPACE &kp T &kp O &kp SPACE>;
            label = "ANDSPOKE";
        };

        CEIConfirm: CEIConfirm {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(C) &kp LS(E) &kp LS(I) &kp SPACE &kp C &kp O &kp N &kp F &kp I &kp R &kp M &kp SPACE>;
            label = "CEICONFIRM";
        };

        resnotused: resnotused {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(R) &kp E &kp S &kp E &kp R &kp V &kp A &kp T &kp I &kp O &kp N &kp SPACE &kp N &kp O &kp T &kp SPACE &kp U &kp S &kp E &kp D>;
            label = "RESNOTUSED";
        };

        extendedto: extendedto {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(E) &kp X &kp T &kp E &kp N &kp D &kp E &kp D &kp SPACE &kp R &kp E &kp N &kp T &kp A &kp L &kp SPACE &kp T &kp O &kp SPACE>;
            label = "EXTENDEDTO";
        };

        repairupdate: repairupdate {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp R &kp E &kp P &kp A &kp I &kp R &kp SPACE &kp U &kp P &kp D &kp A &kp T &kp E &kp SPACE>;
            label = "REPAIRUPDATE";
        };

        shopinfo: shopinfo {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp S &kp H &kp O &kp P &kp SPACE &kp I &kp N &kp F &kp O &kp SPACE &kp A &kp N &kp D &kp SPACE &kp S &kp T &kp A &kp T &kp U &kp S &kp SPACE>;
            label = "SHOPINFO";
        };

        ext3: ext3 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp E &kp X &kp T &kp E &kp N &kp D &kp E &kp D &kp SPACE &kp N3 &kp SPACE &kp D &kp A &kp Y &kp S &kp SPACE>;
            label = "EXT3";
        };

        perceinotes: perceinotes {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp P &kp E &kp R &kp SPACE &kp LS(C) &kp LS(E) &kp LS(I) &kp SPACE &kp N &kp O &kp T &kp E &kp S &kp SPACE>;
            label = "PERCEINOTES";
        };

        poss: poss {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp P &kp O &kp S &kp S &kp I &kp B &kp L &kp E &kp SPACE &kp LS(T) &kp LS(L) &kp SPACE>;
            label = "POSS";
        };

        total: total {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp T &kp O &kp T &kp A &kp L &kp SPACE &kp L &kp O &kp S &kp S &kp SPACE>;
            label = "TOTAL";
        };

        CST: CST {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp A &kp L &kp E &kp R &kp T &kp E &kp D &kp SPACE &kp C &kp L &kp I &kp E &kp N &kp T &kp SPACE &kp S &kp E &kp R &kp V &kp I &kp C &kp E &kp S &kp SPACE>;
            label = "CST";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        macBase {
            display-name = "macOS base";
            bindings = <
&kp ESCAPE              &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp NUMBER_5    &kp UP_ARROW  &kp NUMBER_6  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9   &kp NUMBER_0   &kp BACKSPACE
&kp TAB                 &kp Q         &kp W         &kp E         &kp R         &kp T           &kp DOWN      &kp Y         &kp U         &kp I         &kp O          &kp P          &kp BACKSLASH
&kp LEFT_CONTROL        &kp A         &kp S         &kp D         &kp F         &kp G           &kp LEFT      &kp H         &kp J         &kp K         &kp L          &kp SEMICOLON  &kp SQT
&kp LEFT_SHIFT          &kp Z         &kp X         &kp C         &kp V         &kp B           &kp RIGHT     &kp N         &kp M         &kp COMMA     &kp PERIOD     &kp SLASH      &mo 4
&lt 2 LG(LS(NUMBER_3))  &kp LEFT_GUI  &kp SPACE     &kp SPACE     &kp SPACE     &lt 1 RETURN    &kp RET       &lt 1 RET     &kp SPACE     &kp SPACE     &kp RIGHT_ALT  &kp SLASH
            >;

            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOL_DN>;
        };

        numnav {
            bindings = <
&none          &none      &kp UNDER      &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp MINUS       &kp UP_ARROW     &kp MINUS     &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp UNDER      &none       &kp BACKSPACE
&none          &none      &kp EQUAL      &kp NUMBER_7      &kp NUMBER_8       &kp NUMBER_9    &kp DOWN_ARROW   &kp NUMBER_7  &kp NUMBER_8      &kp NUMBER_9       &kp EQUAL      &none       &none
&none          &none      &kp PLUS       &kp NUMBER_4      &kp NUMBER_5       &kp NUMBER_6    &kp LEFT_ARROW   &kp NUMBER_4  &kp NUMBER_5      &kp NUMBER_6       &kp PLUS       &none       &none
&none          &none      &kp BACKSLASH  &kp NUMBER_1      &kp NUMBER_2       &kp NUMBER_3    &kp RIGHT_ARROW  &kp NUMBER_1  &kp NUMBER_2      &kp NUMBER_3       &kp BACKSLASH  &kp PERIOD  &kp RET
&kp LS(LG(S))  &kp SLASH  &kp NUMBER_0   &kp NUMBER_0      &kp NUMBER_0       &kp RET         &kp ENTER        &kp RET       &kp NUMBER_0      &kp NUMBER_0       &kp NUMBER_0   &kp SLASH
            >;

            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOL_DN>;
        };

        controls {
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1    &bt BT_SEL 3  &bt BT_SEL 4  &trans      &none         &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans        &trans          &trans        &trans        &trans      &trans        &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans        &trans          &trans        &trans        &trans      &trans        &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans        &trans          &trans        &trans        &trans      &trans        &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans        &bt BT_CLR_ALL  &trans        &trans        &bt BT_PRV  &bt BT_NXT    &trans  &trans  &trans  &trans  &trans  &trans
            >;

            sensor-bindings = <&inc_dec_kp 0 0>;
        };

        mouse {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &mmv MOVE_UP     &trans  &trans             &trans             &trans            &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &mmv MOVE_DOWN   &trans  &msc SCRL_DOWN     &mmv MOVE_Y(-300)  &msc SCRL_UP      &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &mmv MOVE_LEFT   &trans  &mmv MOVE_X(-300)  &mmv MOVE_Y(300)   &mmv MOVE_X(300)  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &mmv MOVE_RIGHT  &trans  &trans             &trans             &trans            &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &mkp MB1         &trans  &trans             &trans             &trans            &trans
            >;
        };

        macrosetc {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &days30          &days10         &ext3         &resnotused  &CEIConfirm     &emaileddriver
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &perwork         &perca          &alertCM      &trans       &trans          &number4money
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &calledshop      &calleddriver   &leftmessage  &shopinfo    &extendedto     &UID
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &awaitingupdate  &total          &poss         &CST         &attempt        &none
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &forrewrite      &Emailedbranch  &andassmgr    &andarea     &calledbranch4
            >;
        };
    };
};
