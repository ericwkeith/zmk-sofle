        LM4info: LM4info {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp L &kp M &kp SPACE &kp T &kp O &kp SPACE &kp D &kp R &kp I &kp V &kp E &kp R &kp SPACE &kp F &kp O &kp R &kp SPACE &kp S &kp H &kp O &kp P &kp SPACE &kp I &kp N &kp F &kp O>;
            label = "LM4INFO";
        };

        rentalupdate: rentalupdate {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp L &kp M &kp SPACE &kp T &kp O &kp SPACE &kp D &kp R &kp I &kp V &kp E &kp R &kp SPACE &kp F &kp O &kp R &kp SPACE &kp U &kp P &kp D &kp A &kp T &kp E>;
            label = "RENTALUPDATE";
        };

        task: task {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp T &kp A &kp S &kp K &kp SPACE &kp A &kp L &kp R &kp E &kp A &kp D &kp Y &kp SPACE &kp W &kp O &kp R &kp K &kp E &kp D>;
            label = "TASK";
        };

        rewritemail: rewritemail {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp E &kp M &kp A &kp I &kp L &kp E &kp D &kp SPACE &kp B &kp R &kp A &kp N &kp C &kp H &kp SPACE &kp T &kp O &kp SPACE &kp R &kp E &kp W &kp R &kp I &kp T &kp E>;
            label = "REWRITEMAIL";
        };

        ERAC: ERAC {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(E) &kp LS(R) &kp LS(A) &kp LS(C) &kp RET>;
            label = "ERAC";
        };

        shopnovm: shopnovm {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(N) &kp O &kp SPACE &kp A &kp N &kp S &kp W &kp E &kp R &kp SPACE &kp A &kp T &kp SPACE &kp S &kp H &kp O &kp P &kp SPACE>;
            label = "SHOPNOVM";
        };

        checkback: checkback {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none &kp C &kp H &kp E &kp C &kp K &kp SPACE &kp B &kp A &kp C &kp K &kp SPACE>;
            label = "CHECKBACK";
        };

        hold: hold {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none &kp LS(D) &kp I &kp S &kp C &kp O &kp N &kp N &kp E &kp C &kp T &kp E &kp D &kp SPACE &kp D &kp U &kp E &kp SPACE &kp T &kp O &kp SPACE &kp H &kp O &kp L &kp D &kp SPACE>;
            label = "HOLD";
        };

        drivernovm: drivernovm {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none &kp LS(C) &kp A &kp L &kp L &kp E &kp D &kp SPACE &kp D &kp R &kp I &kp V &kp E &kp R &kp COMMA &kp SPACE &kp N &kp O &kp SPACE &kp A &kp N &kp S &kp W &kp E &kp R &kp SPACE &kp O &kp R &kp SPACE &kp V &kp O &kp I &kp C &kp E &kp M &kp A &kp I &kp L>;
            label = "DRIVERNOVM";
        };

        ceires: ceires {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none &kp E &kp M &kp A &kp I &kp L &kp E &kp D &kp SPACE &kp T &kp O &kp SPACE &kp D &kp R &kp I &kp V &kp E &kp R &kp COMMA &kp SPACE &kp B &kp R &kp A &kp N &kp C &kp H &kp SPACE &kp T &kp O &kp SPACE &kp C &kp A &kp L &kp L>;
            label = "CEIRES";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base {
            bindings = <
&kp ESCAPE        &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp NUMBER_5    &kp UP_ARROW  &kp NUMBER_6  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9   &kp NUMBER_0   &kp BACKSPACE
&kp TAB           &kp Q         &kp W         &kp E         &kp R         &kp T           &kp DOWN      &kp Y         &kp U         &kp I         &kp O          &kp P          &kp BACKSLASH
&kp LEFT_CONTROL  &kp A         &kp S         &kp D         &kp F         &kp G           &kp LEFT      &kp H         &kp J         &kp K         &kp L          &kp SEMICOLON  &kp SQT
&kp LEFT_SHIFT    &kp Z         &kp X         &kp C         &kp V         &kp B           &kp RIGHT     &kp N         &kp M         &kp COMMA     &kp PERIOD     &kp SLASH      &kp RET
&mo 1             &kp SPACE     &kp SPACE     &kp SPACE     &kp SPACE     &lt 3 RET       &kp RET       &lt 2 RET     &kp SPACE     &kp SPACE     &kp RIGHT_GUI  &kp SLASH
            >;

            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOL_DN>;
            display-name = "base layer";
        };

        boardshift {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &to 0     &trans  &mo 4   &trans  &trans  &trans  &trans
            >;
        };

        numpad {
            bindings = <
&kp TILDE  &none  &none  &none  &none      &none      &kp UP_ARROW    &none         &none         &none         &none       &none      &kp BACKSPACE
&kp TAB    &none  &none  &none  &none      &none      &kp DOWN_ARROW  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &none       &none      &none
&none      &none  &none  &none  &none      &none      &kp LEFT_ARROW  &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &none       &none      &none
&none      &none  &none  &none  &none      &none      &kp RIGHT       &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &none       &none      &kp RET
&trans     &none  &none  &none  &kp SPACE  &kp RET    &kp RET         &none         &kp NUMBER_0  &kp NUMBER_0  &kp PERIOD  &kp MINUS
            >;

            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOL_DN>;
        };

        mouse {
            bindings = <
&none         &none                   &none      &none      &none                    &none    &trans  &none     &none              &none              &none             &none   &none
&none         &none                   &none      &none      &none                    &none    &trans  &none     &msc SCRL_DOWN     &mmv MOVE_Y(-400)  &msc SCRL_UP      &none   &none
&none         &kp LG(LC(LEFT_ARROW))  &kp LC(C)  &kp LC(V)  &kp RG(RC(RIGHT_ARROW))  &none    &trans  &none     &mmv MOVE_X(-400)  &mmv MOVE_Y(400)   &mmv MOVE_X(400)  &none   &none
&hatethisjob  &none                   &none      &none      &none                    &none    &trans  &none     &none              &mkp MB3           &none             &none   &mkp MB2
&trans        &trans                  &trans     &trans     &trans                   &none    &trans  &mkp MB1  &mkp MB1           &trans             &trans            &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOL_DN>;
        };

        game {
            display-name = "base layer";
            bindings = <
&kp ESCAPE        &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp NUMBER_5    &kp UP_ARROW  &kp NUMBER_6  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9   &kp NUMBER_0   &kp BACKSPACE
&kp TAB           &kp Q         &kp W         &kp E         &kp R         &kp T           &kp DOWN      &kp Y         &kp U         &kp I         &kp O          &kp P          &kp BACKSLASH
&kp LEFT_CONTROL  &kp A         &kp S         &kp D         &kp F         &kp G           &kp LEFT      &kp H         &kp J         &kp K         &kp L          &kp SEMICOLON  &kp SQT
&kp LEFT_SHIFT    &kp Z         &kp X         &kp C         &kp V         &kp B           &kp RIGHT     &kp N         &kp M         &kp COMMA     &kp PERIOD     &kp SLASH      &kp RET
&mo 1             &kp LEFT_ALT  &kp LEFT_GUI  &kp SPACE     &kp SPACE     &lt 3 RET       &kp RET       &lt 2 RET     &kp SPACE     &kp SPACE     &kp RIGHT_GUI  &kp SLASH
            >;

            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOL_DN>;
